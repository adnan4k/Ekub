@model Ekub.Models.EkubInformation
@{
    ViewBag.Title = "EnterSelectedCycle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-bg-secondary p-3 rounded">
    
        <h2>EnterSelectedCycle</h2>

        @using (Html.BeginForm("EnterSelectedCycle", "Ekub"))
        {

            <div class="form-group">
                @Html.LabelFor(m => m.ContributionAmount, new { @class = "text-dark fw-bold" })
                @Html.TextBoxFor(m => m.ContributionAmount, new { @class = "form-control" })
            </div>





            <div class="form-group">
                @Html.LabelFor(m => m.Day, new { @class = "text-dark fw-bold" })
                @Html.TextBoxFor(m => m.Day, new { @class = "form-control" })
            </div>


            <div class="form-group">
                @Html.LabelFor(m => m.EkubName, new { @class = "text-dark fw-bold" })
                @Html.TextBoxFor(m => m.EkubName, new { @class = "form-control" })
            </div>
            <br />

            <button type="submit" class="btn btn-info">Submit</button>
        }
</div>