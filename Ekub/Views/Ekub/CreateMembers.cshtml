@model Ekub.Models.Members
@{
    ViewBag.Title = "CreateMembres";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="p-3 mb-2 bg-secondary text-white" style="width:75%;margin:auto; border-radius:3% 3%;">
    <h2>Create</h2>
    @using (Html.BeginForm("CreateMembers", "Ekub"))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "text-dark fw-bold" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DateOfBirth, new { @class = "text-dark fw-bold" })
            @Html.TextBoxFor(m => m.DateOfBirth, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Age, new { @class = "text-dark fw-bold" })
            @Html.TextBoxFor(m => m.Age, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Gender, new { @class = "text-dark fw-bold" })
            @Html.TextBoxFor(m => m.Gender, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Email,new { @class = "text-dark fw-bold" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>


        <br />
        <div class="form-group">
            <button style="float:left;display:inline;" type="submit" class="btn btn-info">
                Create
            </button>

        </div>


    }
    <br />
    <br />

</div>