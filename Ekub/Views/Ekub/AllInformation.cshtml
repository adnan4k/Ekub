@model IEnumerable<Ekub.ViewModels.EkubMemberViewModel>
@{
    ViewBag.Title = "AllInformation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-dark table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Gender</th>
            <th>Age</th>
          
            <th>Day</th>
            <th>Contribution Amount</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @using (Html.BeginForm("Delete", "Ekub"))
        {

            foreach (var info in Model)
            {
                for (int i = 0; i < Math.Max(info.Members.Count, info.EkubInformation.Count); i++)
                {
                    @Html.Hidden("MembersId", info.Members[i].Id)
        <tr>
            @if (i < info.Members.Count)
            {
                <td>@info.Members[i].Name</td>
                <td>@info.Members[i].DateOfBirth</td>
                <td>@info.Members[i].Gender</td>
                <td>@info.Members[i].Age</td>

            }
            else
            {
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            }

            @if (i < info.EkubInformation.Count)
            {
                @Html.Hidden("EkubId", info.EkubInformation[i].Id)
         
                <td>@info.EkubInformation[i].Day</td>
                <td>@info.EkubInformation[i].ContributionAmount</td>

                {
                    <td>

                        <button type="submit" class = "btn btn-info">Delete</button>

                    </td>
                }


            }
            else
            {
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            }
        </tr>
                }
            }
        }
    </tbody>
</table>

